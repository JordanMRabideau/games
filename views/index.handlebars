<div class="container">
    <div class="jumbotron bg-primary text-center">
        <h1>Your Videogame Backlog</h1>
    </div>

    <div class="row border-bottom">
        <div class="col-md-6 border-right">
            <h2 class="colHead border-bottom">Your backlog</h2>
            <ul>
            {{#each games}}
                {{#unless played}}
                    {{> game/game_partials played=false}}
                {{/unless}}
            {{/each}}
            </ul>

        </div>
        <div class="col-md-6">
            <h2 class="colHead border-bottom">Completed Games</h2>
             {{#each games}}
                {{#if played}}
                    {{> game/game_partials played=true}}
                {{/if}}
            {{/each}}
        </div>
    </div>

    <br>

    <form class="add-game">
        <h4>Add a game</h4>
        <div class="form-group">
            <input class="form-control form-control-lg" id="name" name="name" type="text" placeholder="Enter the game's name">
        </div>

        <div class="form-group">
            <label for="played">Played?</label><br>
            <input type="radio" name="played" value="0" checked> Not played<br>
            <input type="radio" name="played" value="1"> Played
        </div>

        <button type="submit">Add game</button>
    </form>
</div>

