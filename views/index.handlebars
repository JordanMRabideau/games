<div class="container">
    <div class="jumbotron">
        <h1>Your Videogame Backlog!</h1>
    </div>

    <div class="row">
        <div class="col-md-6 border-right">
            <h2 class="colHead border-bottom">Your backlog</h2>

            <ul>
            {{#each games}}
                {{#unless played}}
                    {{> game/game_partials played=false}}
                {{/unless}}
            {{/each}}
            </ul>

        </div>
        <div class="col-md-6">
            <h2 class="colHead border-bottom">Completed Games</h2>
             {{#each games}}
                {{#if played}}
                    {{> game/game_partials played=true}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

